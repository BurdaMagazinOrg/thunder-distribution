{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}


{% if content %}
    <figure class="op-interactive">
        {{ content.field_media_video_embed_field }}
        <figcaption>
            {% if content.field_copyright|render  %}
                <cite><span class="text-copyright">{{ content.field_copyright }}</span></cite>
            {% endif %}
            {% if content.field_description|render %}
                <h1>{{ content.field_description | plain_text }}</h1>
            {% endif %}
        </figcaption>
    </figure>
{% endif %}
